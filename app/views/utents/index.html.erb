  <table>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>

    <% @utents.each do |utent| %>
      <tr>
        <td><%= utent.email %></td>
        <td><%= utent.password %></td>
        <td><%= link_to 'Show', utent_path(utent) %></td>
        <td><%= link_to 'Edit', edit_utent_path(utent) %></td>
        <td><%= link_to 'Destroy', utent_path(utent),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
