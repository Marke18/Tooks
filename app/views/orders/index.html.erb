
<div class="new">
    <h1>Ordini</h1>

  <table>
    <tr>
      <th>Utente</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.utent_id %></td>
        <td><%= order.data %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order_path(order),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

