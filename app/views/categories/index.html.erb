
<div class="new">
  <h1>Categorie</h1>

  <table>
    <tr>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Immagine1</th>
      <th colspan="3"></th>
    </tr>

    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nome_cat %></td>
        <td><%= category.descr %></td>
        <td><%= category.img1 %></td>
        <td><%= link_to 'Show', category_path(category) %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category_path(category),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

</div>
